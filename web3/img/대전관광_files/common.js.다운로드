/* 유관기관 사이트 오픈 레이어 */
function openlayer(btn){
	var btn = $(btn);
	var n;

	btn.unbind().bind("click",function(event){
		if(return_width() > 310){
			var t = $(this);
			if(t.next().css("display") == "none"){
				n = t.index("button");
				btn.not(n).next().hide();
				t.next().show();
				btn.not(n).removeClass("active");
				t.addClass("active");
				btn.parent().removeAttr("class").addClass("mobile"+(n+1));
			}else{
				t.removeClass("active");
				t.next().hide();
				btn.parent().removeAttr("class");
			}
			event.preventDefault();
			//console.log(n+', '+btn.not(n));
		}
	});

	btn.next().find("a").last().bind("focusout",function(){
		btn.next().hide();
		btn.parent().removeAttr("class");
	});

	$(".closeFamlayer a").bind("click",function(){
		var thref = $(this).attr('href');
		btn.removeClass("active");
		btn.next().hide();
		btn.parent().removeAttr("class");
		$(thref).focus();
		return false;
	});

	/*btn.parent().bind("mouseleave",function(e){
		btn.next().hide();
		btn.parent().removeAttr("class");
	});*/
}


/* 너비값 전달 */
function return_width(){
	var w = $(window).width(); return w;
}


  /* 이달의 테마여행 */
$(function(){

    $('.rolling_ul li').each(function(){
 
        var liClass = $(this).attr('class');
        var liClassNum = liClass.substr(5,6);
        
        var divClass = '.thema03_0'+liClassNum;
        var divClass2 = $(divClass).attr('class').substr(11,6);
        var liLen = $('.rolling_ul li').length;

         $(this).click(function(){


            if (liClass == divClass2) {
            	 numberCheck(liClassNum);

            	var img = $('.rolling_ul .'+divClass2).find('img');

                $('.thema').removeClass(' on');
                $('.thema03_0'+liClassNum+'.'+divClass2).addClass(' on');

                $('.rolling_txt').removeClass(' on');
                $('.'+divClass2).find('span').addClass(' on');


                $("#trip_rolling").find('li').removeClass(' on');
				$('.thema'+liClassNum).addClass(' on');	


                for(i=1; i<=liLen; i++){

					var div = $('.rolling_ul .thema'+i).find('img');

                	if($('.thema'+i).attr('class') == 'thema'+i+' on'){

						div.attr('src',div.attr('src').replace(i+'_out.png',i+'.png'));	
        			}else{

        				div.attr('src',div.attr('src').replace(i+'.png',i+'_out.png'));
        			}	
                }

            }

        })

    })


      $('#toLeftButton').click(function(){

        var num = $('#numberuodown').val();
        num--

        if(num<=0){
            num=1;
        }

        numberCheck(num);
        $('.thema').removeClass(' on');
        $('.thema03_0'+num+'.thema'+num).addClass(' on');

        $('.rolling_txt').removeClass(' on');
        $('.thema'+num).find('span').addClass(' on');

        $("#trip_rolling").find('li').removeClass(' on');
		$('.thema'+num).addClass(' on');	

		var liLen = $('.rolling_ul li').length;

        for(i=1; i<=liLen; i++){

			var div = $('.rolling_ul .thema'+i).find('img');

        	if($('.thema'+i).attr('class') == 'thema'+i+' on'){

				div.attr('src',div.attr('src').replace(i+'_out.png',i+'.png'));	
			}else{

				div.attr('src',div.attr('src').replace(i+'.png',i+'_out.png'));
			}	
        }

     })



     $('#toRightButton').click(function(){

        var num = $('#numberuodown').val();
        var liLen = $('.rolling_ul li').length;

        if(num == '' || num == null){
        	num=2;
        }else{
        	num++;
        }

        if(num>liLen){
            num=liLen;
        }

        numberCheck(num);

        $('.thema').removeClass(' on');
        $('.thema03_0'+num+'.thema'+num).addClass(' on');

        $('.rolling_txt').removeClass(' on');
        $('.thema'+num).find('span').addClass(' on');


        $("#trip_rolling").find('li').removeClass(' on');
		$('.thema'+num).addClass(' on');	


        for(i=1; i<=liLen; i++){

			var div = $('.rolling_ul .thema'+i).find('img');

        	if($('.thema'+i).attr('class') == 'thema'+i+' on'){

				div.attr('src',div.attr('src').replace(i+'_out.png',i+'.png'));	
			}else{

				div.attr('src',div.attr('src').replace(i+'.png',i+'_out.png'));
			}	
        }


     })


function numberCheck(liClassNum){
	document.getElementById('numberuodown').value = liClassNum;
}


});